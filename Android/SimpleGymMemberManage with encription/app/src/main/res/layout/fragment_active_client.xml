<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ActiveClientFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textViewActiveClientFragmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/active_clients_text"
            android:textStyle="bold"
            android:textSize="@dimen/edit_text_h1_size"
            android:textAlignment="center"
            />
        <ScrollView
            android:id="@+id/scrollViewActiveClients"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textViewActiveClientFragmentName"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutActiveClients"
                android:orientation="vertical"
                android:gravity="center"
                >

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>


























































