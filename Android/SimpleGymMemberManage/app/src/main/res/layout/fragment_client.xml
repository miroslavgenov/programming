<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    <variable
        name="client"
        type="com.miroslav.simpleGymMemberManage.actors.Client" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.ClientFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClientId"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/edit_text_h1_size"
            android:text="@string/client_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewClientInfo"
            android:text='@{client!=null?client.toString():"Not a valid client"}'
            />


    </LinearLayout>
</layout>




























