<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        tools:context=".fragment.StartFragment">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_play"
            android:layout_width="@dimen/button_play_layout_width"
            android:layout_height="@dimen/button_play_layout_height"
            android:background="@drawable/button_play_pressed_state_selector"
            android:text="@string/play_text"
            android:textColor="@color/white"
            android:textSize="@dimen/button_play_text_size" />

    </LinearLayout>
</layout>





























