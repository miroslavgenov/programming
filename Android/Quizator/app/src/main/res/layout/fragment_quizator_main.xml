<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".fragment.QuizatorMainFragment">

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="0"

            android:background="@drawable/layout_quiz_question"
            />

        <ImageButton
            android:id="@+id/button_next_question"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/layout_answers"

            android:layout_marginTop="50dp"


            android:background="@drawable/image_button_state_animation"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        <LinearLayout
            android:id="@+id/layout_question"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_answers"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/layout_question"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"

            >

        </LinearLayout>
    </RelativeLayout>
</layout>

































