<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/rectangle_shape_corner_radius"/>
            <gradient
                android:angle="315"
                android:startColor="@color/active_button_start_color"
                android:centerColor="@color/active_button_center_color"
                android:endColor="@color/active_button_end_color"
                android:type="linear"

                />
        </shape>
    </item>
    <item
        android:top="@dimen/layer_list_item_border_space"
        android:bottom="@dimen/layer_list_item_border_space"
        android:left="@dimen/layer_list_item_border_space"
        android:right="@dimen/layer_list_item_border_space">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/rectangle_shape_corner_radius"/>
            <solid android:color="@color/layout_main_background_color"/>
        </shape>
    </item>
</layer-list>
























