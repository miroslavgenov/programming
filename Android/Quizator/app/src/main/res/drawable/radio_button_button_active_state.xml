<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:startColor="@color/active_button_start_color"
                android:centerColor="@color/active_button_center_color"
                android:endColor="@color/active_button_end_color"
                android:type="linear"

                />
                <size
                    android:width="10dp"
                    android:height="10dp"
                    />
        </shape>
    </item>
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp"
        >
        <shape android:shape="oval">

            <solid android:color="@color/layout_main_background_color"/>
        </shape>
        </item>

</layer-list>










































